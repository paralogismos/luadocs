# Makefile.in
.POSIX:
@SHELL

EXEC=luadocs
EXT=sh
LOCAL_BUILD_ARTIFACTS=Makefile config.status

# Default installation directory.
@BINDIR

SRC_FILE=$(EXEC).$(EXT)
INSTALL_PATH=$(BINDIR)/$(EXEC)

.PHONY: all
all: install

install: $(SRC_FILE)
	@cp $(SRC_FILE) $(INSTALL_PATH)
	@chmod +x $(INSTALL_PATH)  # Set executable permissions
	@echo $(EXEC) installed in $(BINDIR).

Makefile: config.status
	@$(SHELL) config.status

.PHONY: reinstall uninstall distclean
reinstall:
	@make -s uninstall
	@make -s install

uninstall:
	@rm -f $(INSTALL_PATH)
	@echo $(EXEC) has been uninstalled.

distclean:
	@rm -f $(LOCAL_BUILD_ARTIFACTS)
